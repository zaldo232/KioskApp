<UserControl x:Class="KioskApp.Views.AdminLoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <TextBlock Text="관리자 로그인" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Width="180" Margin="0,5" ToolTip="아이디"/>
            <PasswordBox x:Name="pwdBox" Width="180" Margin="0,5"/>
            <Button Content="로그인" Width="180" Height="30" Margin="0,10,0,0" Click="LoginButton_Click"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
