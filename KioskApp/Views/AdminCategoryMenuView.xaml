<UserControl x:Class="KioskApp.Views.AdminCategoryMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 카테고리 패널 -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="카테고리 목록" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding Categories}" 
                     SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                     DisplayMemberPath="Name" Height="200" />
            <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="0,10,0,0" ToolTip="카테고리명" mah:TextBoxHelper.Watermark="카테고리명"/>
            <Button Content="카테고리 추가" Command="{Binding AddCategoryCommand}" Margin="0,5,0,0"/>
            <Button Content="카테고리 수정" Command="{Binding UpdateCategoryCommand}" Margin="0,5,0,0"/>
            <Button Content="카테고리 삭제" Command="{Binding DeleteCategoryCommand}" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- 메뉴 패널 -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="해당 카테고리 메뉴" FontWeight="Bold"/>
            <ListBox ItemsSource="{Binding Menus}"
                     SelectedItem="{Binding SelectedMenu, Mode=TwoWay}"
                     DisplayMemberPath="Name" Height="200"/>
            <TextBox Text="{Binding NewMenuName, UpdateSourceTrigger=PropertyChanged}" Width="200" ToolTip="이름" Margin="0,5,0,0" mah:TextBoxHelper.Watermark="메뉴명"/>
            <TextBox Text="{Binding NewMenuDesc, UpdateSourceTrigger=PropertyChanged}" Width="200" ToolTip="설명" Margin="0,5,0,0" mah:TextBoxHelper.Watermark="메뉴설명"/>
            <TextBox Text="{Binding NewMenuPrice, UpdateSourceTrigger=PropertyChanged}" Width="200" ToolTip="가격" Margin="0,5,0,0" mah:TextBoxHelper.Watermark="메뉴가격" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox Text="{Binding NewMenuImagePath, UpdateSourceTrigger=PropertyChanged}" Width="150" ToolTip="이미지경로" Margin="0,5,0,0" mah:TextBoxHelper.Watermark="이미지"/>
                <Button Content="파일찾기" Command="{Binding BrowseImageCommand}" Width="45" Height="25" Margin="5,0,0,0" FontSize="7" />
            </StackPanel>
            
            <Button Content="메뉴 추가" Command="{Binding AddMenuCommand}" Margin="0,5,0,0"/>
            <Button Content="메뉴 수정" Command="{Binding UpdateMenuCommand}" Margin="0,5,0,0"/>
            <Button Content="메뉴 삭제" Command="{Binding DeleteMenuCommand}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 옵션 패널 -->
        <StackPanel Grid.Column="2" Margin="10">
            <TextBlock Text="옵션 관리" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox ItemsSource="{Binding MenuOptions}"
                     SelectedItem="{Binding SelectedMenuOption, Mode=TwoWay}"
                     Height="140" DisplayMemberPath="OptionName"/>
            <!-- 옵션명 입력 -->
            <TextBox Text="{Binding NewOptionName, UpdateSourceTrigger=PropertyChanged}"
                     Width="160" Margin="0,7,0,0" mah:TextBoxHelper.Watermark="옵션명"/>
            <CheckBox Content="필수 옵션" IsChecked="{Binding NewOptionIsRequired}" Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                <Button Content="옵션 추가" Command="{Binding AddMenuOptionCommand}" Width="60"/>
                <Button Content="옵션 수정" Command="{Binding UpdateMenuOptionCommand}" Margin="8,0,0,0" Width="60"/>
                <Button Content="옵션 삭제" Command="{Binding DeleteMenuOptionCommand}" Margin="8,0,0,0" Width="60"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                <TextBox Text="{Binding NewOptionValueLabel, UpdateSourceTrigger=PropertyChanged}"
                         Width="90" mah:TextBoxHelper.Watermark="선택지"/>
                <TextBox Text="{Binding NewOptionExtraPrice, UpdateSourceTrigger=PropertyChanged}"
                         Width="50" Margin="7,0,0,0" mah:TextBoxHelper.Watermark="추가금"/>
                <Button Content="선택지 추가" Command="{Binding AddOptionValueCommand}" Margin="7,0,0,0" Width="55" FontSize="8"/>
            </StackPanel>
            
            <!-- 현재 선택된 옵션의 선택지 목록 -->
            <ListBox ItemsSource="{Binding SelectedMenuOption.Values}" Height="100" Margin="0,5,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ValueLabel}" Width="80"/>
                            <TextBlock Text="{Binding ExtraPrice, StringFormat={}{0}원}" Width="40"/>
                            <Button Content="삭제" Command="{Binding DataContext.DeleteOptionValueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" Width="38" FontSize="10" Margin="5,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
