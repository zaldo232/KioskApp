<UserControl x:Class="KioskApp.Views.AdminAdImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Margin="40">
            <TextBlock Text="광고 이미지 관리" FontSize="22" FontWeight="Bold" Margin="0,0,0,18"/>
            <ListBox ItemsSource="{Binding AdImages}" SelectedItem="{Binding SelectedAdImage, Mode=TwoWay}" Height="480">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding FileImage}" Width="58" Height="58" Margin="2"/>
                            <TextBlock Text="{Binding FileName}" Margin="18,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                <TextBox Text="{Binding NewAdImagePath}" Width="200" IsReadOnly="True" Margin="0,0,5,0"/>
                <Button Content="파일찾기" Command="{Binding BrowseAdImageCommand}" Width="70"/>
                <Button Content="추가" Command="{Binding AddAdImageCommand}" Width="60" Margin="7,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="삭제" Command="{Binding DeleteAdImageCommand}" Width="70" Margin="0,0,8,0"/>
                <Button Content="위로" Command="{Binding MoveUpAdImageCommand}" Width="50"/>
                <Button Content="아래로" Command="{Binding MoveDownAdImageCommand}" Width="50" Margin="6,0,0,0"/>
            </StackPanel>
            
            <Grid Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Margin="16,16,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Content="처음으로"
                        Command="{Binding GoHomeCommand}"
                        Height="40"
                        FontSize="16"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Width="160"/>

                <Button Content="메뉴관리"
                        Command="{Binding GoMenuCommand}"
                        Height="40"
                        FontSize="16"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Width="160"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
