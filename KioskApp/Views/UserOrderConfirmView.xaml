<UserControl x:Class="KioskApp.Views.UserOrderConfirmView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- 주문내역 (스크롤) -->
            <RowDefinition Height="Auto" />
            <!-- 총 금액 (고정) -->
            <RowDefinition Height="Auto" />
            <!-- 하단 버튼 (고정) -->
        </Grid.RowDefinitions>

        <!-- 주문내역: 스크롤 -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- 왼쪽 타이틀 -->
                    <TextBlock Grid.Column="0" Text="주문하신 내역을 확인해주세요" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                    <!-- 오른쪽 남은시간 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="남은시간 : " FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding RemainSeconds}" FontWeight="Bold" FontSize="16" Foreground="Red"/>
                        <TextBlock Text="초" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Grid>
                <ItemsControl ItemsSource="{Binding OrderItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding MenuName}" FontWeight="Bold" FontSize="18" />
                                        <ItemsControl ItemsSource="{Binding OptionList}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" Margin="0,2,0,2" Foreground="#AAA"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <TextBlock Text="{Binding Quantity, StringFormat=수량: {0}개}" FontSize="14" Margin="0,5,0,0"/>
                                        <TextBlock Text="{Binding TotalPrice, StringFormat=총 가격: {0:#,##0}원}" FontSize="14" Foreground="DarkRed"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="삭제" Width="60" Height="38" Margin="15,0,0,0"
                                            Command="{Binding DataContext.RemoveOrderItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" Background="#ddd" Foreground="Red"
                                            VerticalAlignment="Top" HorizontalAlignment="Right"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 총 금액: 항상 우하단 고정 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock Text="총 금액: " FontSize="18" FontWeight="Bold"/>
            <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:#,##0}원'}" FontSize="18" FontWeight="Bold" Foreground="Red" Margin="8,0"/>
        </StackPanel>

        <!-- 하단 버튼: 항상 아래 고정 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="이전으로" Width="120" Height="45" FontSize="16" Margin="0,0,20,0"
                    Command="{Binding BackCommand}" />
            <Button Content="결제하기" Width="120" Height="45" FontSize="16" Background="Red" Foreground="White"
                    Command="{Binding PayCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
