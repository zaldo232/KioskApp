<Window x:Class="KioskApp.Views.OptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Width="350" Height="320" Title="옵션 선택">
    <StackPanel Margin="22">
        <TextBlock Text="{Binding Menu.Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
        <!-- 예시: 사이즈 옵션 -->
        <TextBlock Text="사이즈" FontWeight="SemiBold"/>
        <ComboBox ItemsSource="{Binding SizeOptions}" SelectedItem="{Binding SelectedSize}" Margin="0,4,0,12"/>
        <!-- 예시: 수량 -->
        <TextBlock Text="수량" FontWeight="SemiBold"/>
        <StackPanel Orientation="Horizontal" Margin="0,4,0,12">
            <Button Content="-" Width="38" Click="DecreaseQty"/>
            <TextBlock Text="{Binding Quantity}" Width="38" TextAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="+" Width="38" Click="IncreaseQty"/>
        </StackPanel>
        <!-- 추가 옵션 등 원하는 것 추가 -->
        <Button Content="장바구니 담기" Height="42" Margin="0,18,0,0" Background="#ee3a22" Foreground="White" FontSize="16"
                Click="AddToCart"/>
    </StackPanel>
</Window>
